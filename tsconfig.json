{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES2015",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "rootDir": "webapp",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "com/avci/project/*": [
        "webapp/*"
      ]
    },
    "types": [ "@sapui5/ts-types-esm" ]
  },
  "include": [
    "webapp/**/*"
  ]
}